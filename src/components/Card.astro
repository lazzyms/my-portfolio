---
//src/components/Card.astro
const { name, position, aboutMe, linkedin, github, cvLink, profileImage, currentCompany } = Astro.props;

import '../styles/card.css';
---

<div class="container">
  <div class="card-container">
    <div class="image">
      <img src={profileImage} alt={name} />
    </div>
    <div class="descripcion">
      <h1>{name}</h1>
      <h2>{position}, {currentCompany}</h2>
      <p>
        <span class="typing">{aboutMe}</span>
      </p>
      <div class="icons">
        <a href={linkedin} target="_blank" aria-label="LinkedIn">
          <i class="bi bi-linkedin"></i>
        </a>
        <a href={github} target="_blank" aria-label="GitHub">
          <i class="bi bi-github"></i>
        </a>
        <a href={cvLink} target="_blank" aria-label="Resume">
          <i class="bi bi-file-earmark-arrow-down"></i>View Resume
        </a>
      </div>
    </div>
  </div>
</div>